<% @users_show ||= current_user %>
  <div class="stats">
    <a href="<%= following_user_path(@users_show) %>">
      <strong id="following" class="stat">
        <%= @users_show.followings.count %>
      </strong>
      following
    </a>
    <a href="<%= followers_user_path(@users_show) %>">
      <strong id="followers" class="stat">
        <%= @users_show.followers.count %>
      </strong>
      followers
    </a>
  </div>