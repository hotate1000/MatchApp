<header>
  <div class='header__box'>
    <div class='header__box__left'>
      <div class='header__box__left__title'>
        <%= link_to image_tag("/assets/logo1.png", alt:"ロゴの画像", class:'logo_img'),users_path %>
      </div>
      <div class='header__box__left__img'>
      </div>
    </div>
    
    <div class='header__box__right'>
      <div class='header__box__right__myPage'>
        <span>
          <img src="/assets/arrow.png" alt="矢印の画像" class='arrow'>
        </span>
        <ul class='header__box__right__myPage__list'>
          <li><%= link_to 'マイページ', user_path(current_user[:id]), method: :get %></li>
          <li><%= link_to 'いいねされたユーザー', followedPage_user_path(current_user[:id]), method: :get %></li>
          <li><%= link_to 'いいねしたユーザー', followerPage_user_path(current_user[:id]), method: :get %></li>
          <li><%= link_to 'ログアウト',destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>
  </div>
</header>